<ol class="col-start-1 col-end-9 px-5 pb-24 md:pb-36">
  {% for post in postslist %}
    {% if post.data.published %}
      <div class="mb-3">
        <article class="md:grid md:grid-cols-4 md:gap-10">
          <div class="md:col-start-3 md:col-end-7 mb-1">
            <h3>
              <a href="{{ post.url | url }}" title="read {{ post.data.title }}" class="font-bold text-2xl md:text-3xl tracking-tighter hover:text-purple-800 dark:text-gray-200 dark:hover:text-yellow-200 pt-5">
                {% if post.data.title %}
                  {{ post.data.title }}
                {% else %}
                  <code>{{ post.url }}</code>
                {% endif %}
              </a>
            </h3>
            <p class="pt-4 text-gray-800 dark:text-gray-300 text-lg">
              {{ post.data.subHeading }}
              <time datetime="{{ post.date | htmlDateString }}" class="font-serif whitespace-nowrap text-gray-600 dark:text-gray-400 italic">&mdash; {{ post.date | readableDate }}</time>
            </p>
          </div>
        </article>
      </div>
    {% endif %}
  {% endfor %}
</ol>