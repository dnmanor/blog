<div class="{%- if topColor -%}{{ topColor }}{%- endif -%}">
  <header
    class="relative max-w-screen-xl mx-auto h-24 p-5 md:flex md:justify-between md:items-center">
    <!-- logo -->
    <a href="/" title="back to homepage" class="logo">
      <h2 class="text-sm font-semibold font-bbh">dnmanor.</h2>
    </a>
    <nav class="hidden md:block py-1">
      {% set navPages = collections.all | eleventyNavigation %}
      <ul class="text-right">
        {%- for entry in navPages %}
          {%- if entry.url != '/feed.xml' %}
            <li class="inline-block mr-5">
              <a href="{{ entry.url | url }}" class="font-bold font-bbh transition-colors hover:text-black
              {% if entry.url == page.url%}  text-black {% else %}text-gray-700 {% endif %}">{{ entry.title }}</a>
            </li>
          {%- endif %}
        {%- endfor %}
      </ul>
    </nav>
  </header>
</div>