<div class="{%- if topColor -%}{{ topColor }}{%- endif -%} {% if page.url !== '/' %}pb-32 lg:pb-64{% endif %}">
  <header
    class="relative max-w-screen-xl mx-auto h-24 p-5 md:flex md:justify-between md:items-center">
    <!-- logo -->
    <a href="/" title="back to homepage" class="logo">
      <h2 class="text-sm font-semibold">dnmanor.</h2>
    </a>
    <nav class="hidden md:block py-1">
      {% set navPages = collections.all | eleventyNavigation %}
      <ul class="text-right">
        {%- for entry in navPages %}
          <li class="inline-block mr-5">
            <a href="{{ entry.url | url }}" class="font-bold transition-colorshover:text-black
            {% if entry.url == page.url %}  text-black {% else %}text-gray-700 {% endif %}">{{ entry.title }}</a>
          </li>
        {%- endfor %}
        <li class="inline-block">
          <a href="{{ metadata.author.mailtolink }}" title="get in touch" target="_blank" rel="noreferrer" class="text-gray-800 underline text-sm">
            <span>Get in touch</span>
          </a>
        </li>
      </ul>
    </nav>
  </header>
</div>